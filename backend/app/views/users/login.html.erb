<%= render "layouts/flashmessage" %>

<%= form_tag(dologin_path, method: "post", class: 'col-md-4 col-md-offset-4 jumbotron row') do %>

    <div class="row">

      <h2>Log in</h2>
      <%= label_tag(:email, "E-mail") %>
      <%= email_field_tag(:email, nil, class: 'form-control') %>

      <%= label_tag(:password, "Password") %>
      <%= password_field_tag(:password, nil, class: 'form-control') %>

      <br>

      <%= submit_tag("Login", class: 'btn btn-lg btn-primary btn-block') %>

    </div>

    <hr>

    <div class="row">
      <%= link_to "Register", new_user_path, class: 'btn btn-default' %>
    </div>

<% end %>

