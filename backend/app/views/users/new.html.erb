<%= render "layouts/flashmessage" %>

<% if @user.errors.any? %>

  <div class="row alert alert-warning col-md-6 col-md-offset-3">
    <h3>Errors occured</h3>

    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>

  </div>

<% end %>

<%= form_for @user, :html => {:class => 'col-md-4 col-md-offset-4 jumbotron row'} do |f| %>
  <div class="row">
    <h2>Registration</h2>

    <%= f.label :name %>
    <%= f.text_field :name, :size => 50, class: 'form-control' %>

    <%= f.label :email %>
    <%= f.email_field :email, :size => 50, class: 'form-control' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>

    <br>

    <%= f.submit "Register", class: 'btn btn-lg btn-primary btn-block' %>



  </div>
  <hr>
  <div class="row">
    <%= link_to "To login", login_path, class: 'btn btn-default' %>
  </div>



<% end %>